<Window x:Name="frmPrincipal" x:Class="FluxoDeCaixa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluxoDeCaixa"
        mc:Ignorable="d"
        Title="Fluxo de Caixa" Height="720" Width="1024" Grid.IsSharedSizeScope="True" WindowStartupLocation="CenterScreen" Background="#FFC6E8FF">
    <Grid>
        <Menu x:Name="MenuPrincipal" Height="21" VerticalAlignment="Top">
            <MenuItem x:Name="menuItemCadastra" Header="Cadastrar">
                <MenuItem x:Name="MenuItemCadastraCategoria" Header="Categorias" Click="MenuItemCadastraCategoria_Click"/>
                <MenuItem x:Name="MenuItemCadastraMovimento" Header="Movimentos" Click="MenuItemCadastraMovimento_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuItemAnalise" Header="Análise">
                <MenuItem x:Name="MenuItemAnaliseControleGasto" Header="Controle de Gastos"/>
            </MenuItem>
        </Menu>
        <StatusBar Height="24" VerticalAlignment="Bottom">
            <StatusBarItem Content="Desenvolvido por: Maycon Wisley"/>
        </StatusBar>

    </Grid>
</Window>
